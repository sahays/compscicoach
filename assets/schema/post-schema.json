{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"_id": {
			"type": "string",
			"pattern": "^[0-9a-fA-F]{24}$",
			"maxLength": 23
		},
		"url": {
			"type": "string",
			"minLength": 1,
			"maxLength": 511
		},
		"title": {
			"type": "string",
			"minLength": 1,
			"maxLength": 511
		},
		"subtitle": {
			"type": "string",
			"minLength": 1,
			"maxLength": 255
		},
		"kicker": {
			"type": "string",
			"minLength": 1,
			"maxLength": 63
		},
		"body": {
			"type": "string",
			"minLength": 1,
			"maxLength": 81911
		},
		"description": {
			"type": "string",
			"minLength": 1,
			"maxLength": 1023
		},
		"keywords": {
			"type": "string",
			"minLength": 1,
			"maxLength": 255
		},
		"tldr": {
			"type": "string",
			"minLength": 1,
			"maxLength": 511
		},
		"timestamp": {
			"type": "string",
			"format": "date"
		},
		"hero_image_url": {
			"type": "string",
			"format": "uri",
			"minLength": 1,
			"maxLength": 1023
		},
		"authors": {
			"type": "array",
			"items": {
				"type": "string",
				"minLength": 1,
				"maxLength": 255
			},
			"minItems": 1
		},
		"tags": {
			"type": "array",
			"items": {
				"type": "string",
				"minLength": 1,
				"maxLength": 255
			},
			"minItems": 1
		}
	},
	"required": [
		"url",
		"title",
		"subtitle",
		"kicker",
		"body",
		"description",
		"keywords",
		"tldr",
		"timestamp",
		"hero_image_url",
		"authors",
		"tags"
	]
}
