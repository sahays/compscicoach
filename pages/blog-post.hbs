{{#> main}}
    <p class="gradient-text uppercase text-lg mb-4">{{model.tag.name}}</p>
    <div class="flex-col">
        <!-- <p class="text-sm mb-2 uppercase">{{model.kicker}}</p> -->
        <h1 class="text-5xl mb-4">{{model.title}}</h1>
        <p class="text-sm text-gray-400 mb-4">{{model.subtitle}}</p>
    </div>
    <figure class="mb-8">
        <img src="{{model.hero_image}}" alt="{{model.title}}" class="rounded shadow-md w-full">
    </figure>
    <figure class="flex items-center gap-4">
        <img src="{{model.author.thumbnail_photo}}" class="rounded-full shadow w-16"
            alt="{{model.author.first_name}} {{model.author.last_name}}">
        <div class="flex flex-col">
            <p class="font-semibold text-sm">
                {{model.author.first_name}} {{model.author.last_name}}
            </p>
            <p class="text-xs text-gray-400">
                {{model.author.bio}}
            </p>
            <p class="text-xs">
                {{model.publish_date}}
            </p>
        </div>
    </figure>
    <section class="grid grid-cols-12 mt-8 lg:gap-16">
        <div class="col-span-12 w-full lg:col-span-8">
            <div class="prose prose-lg dark:prose-invert prose-img:shadow-md prose-img:rounded">

                {{{body}}}
            </div>
        </div>
        <div class="hidden lg:block lg:col-span-4">
            <div class="max-w-md p-6 mx-auto bg-gray-600 dark:bg-white shadow-md rounded-md">
                <h2 class="text-xl font-semibold mb-2 text-white dark:text-gray-800">We do newsletters, too</h2>
                <hr class="border-t-2 border-gray-200 mb-4">
                <p class="text-white dark:text-gray-700 mb-4">Get tips, technical guides, and best practices right in
                    your inbox.</p>
                <button class="px-4 py-2 bg-gradient-to-r from-gray-700 to-black text-white font-semibold rounded-md">
                    Subscribe
                </button>
            </div>
        </div>
    </section>
{{/main}}